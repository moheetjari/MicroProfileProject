<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="MyReview" transaction-type="RESOURCE_LOCAL">
    <class>entity.Author</class>
    <class>entity.Company</class>
    <class>entity.Category</class>
    <class>entity.Publisher</class>
    <class>entity.Reviewxcriteria</class>
    <class>entity.Advertise</class>
    <class>entity.Role</class>
    <class>entity.Permission</class>
    <class>entity.Genre</class>
    <class>entity.Reviews</class>
    <class>entity.Categoryratingcriteria</class>
    <class>entity.Rolepermission</class>
    <class>entity.Userrole</class>
    <class>entity.Ratingcriterias</class>
    <class>entity.Product</class>
    <class>entity.Users</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/reviewdb"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="org.gjt.mm.mysql.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
    </properties>
  </persistence-unit>
</persistence>
